<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <!-- Error -->
    <RelativeLayout
        android:id="@+id/error"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_above="@+id/btn_find"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#999999"
                android:text="Oh no!"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#999999"
                android:text="Our robots could not find your conversations."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="#999999"
                android:text="Tap screen to retry"/>

        </LinearLayout>

    </RelativeLayout>

    <!-- Loading -->
    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_above="@+id/btn_find">

        <ProgressBar
            android:id="@+id/p_header_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ProgressBar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:gravity="center_horizontal"
            android:text="Our robots are finding your messages."
            android:textColor="#999999"/>

    </RelativeLayout>

    <!-- Empty -->
    <TextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="There are no messages yet"
        android:textColor="#999999"
        android:layout_above="@+id/btn_find"
        android:stackFromBottom="true"
        android:visibility="gone"/>

    <!-- Content -->
    <ListView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/btn_find"
        android:stackFromBottom="true"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:baselineAligned="true"
        android:background="@drawable/chat_box">

        <EditText
            android:layout_weight="1"
            android:id="@+id/textInput"
            android:layout_height="45dp"
            android:layout_width="0dip"
            android:hint="Message">
            <requestFocus></requestFocus>
        </EditText>

        <Button
            android:id="@+id/btn_send"
            android:layout_height="45dp"
            android:layout_width="60dp"
            android:drawableLeft="@drawable/ic_action_send_now"
            android:paddingLeft="14dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>